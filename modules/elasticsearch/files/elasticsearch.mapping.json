{
  "_default_": {
    "_all": { "enabled": false },
    "_source": { "compress": true },
    "dynamic_templates": [
      {
        "string_template" : {
          "match" : "*",
          "mapping": { "type": "string", "index": "not_analyzed" },
          "match_mapping_type" : "string"
        }
      }
    ],
    "properties" : {
      "@fields": { "type": "object", "dynamic": true, "path": "full" },
      "@message" : { "type" : "string", "index" : "analyzed" },
      "message" : { "type" : "string", "index" : "analyzed" }
    }
  }
}
